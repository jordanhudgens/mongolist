        <script type="text/ng-template" id="/home.html">

            <h3>
                See our listings
            </h3>

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            Title
                        </th>
                        <th>
                            Description
                        </th>
                        <th>
                            Likes
                        </th>
                    </tr>
                </thead>
                <tbody>

                    <tr ng-repeat="listing in listings">
                        <td>
                            <a ng-href="#/listings/{{listing._id}}">{{ listing.title }}</a>
                        </td>
                        <td>
                            {{ listing.description }}
                        </td>
                        <td>
                            {{ listing.likes }}
                        </td>
                    </tr>

                </tbody>
            </table>

        </script>

            <script type="text/ng-template" id="/listings.html">
                <h1>{{ listing.title }}</h1>
                <em>Likes: {{ listing.likes }}</em>
                <a href="" ng-click="addLike()">Like</a>
                <hr>
                <p>{{ listing.description }}</p>
                <hr>

                <form ng-submit="addQuestion()">
                    <input type="text" placeholder="Question" ng-model="question" />
                    <input type="text" placeholder="Name" ng-model="name" />
                    <button type="submit" class="btn btn-default">Add Question</button>
                </form>

                <a href="" ng-click="showDetails=true">Show</a>
                <a href="" ng-click="showDetails=false">Hide</a>

                <div ng-hide="showDetails"></div>
                <div ng-show="showDetails">
                    <h3>Comments</h3>
                    <div ng-repeat="question in listing.questions" class="well">
                        {{ question.body }} by <strong>{{question.customer}}</strong>
                    </div>
                </div>







            </script>

